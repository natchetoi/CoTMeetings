<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:u="sap.ui.unified" xmlns:t="sap.ui.table" controllerName="fusion.controller.Calendar">
	<html:style>
		#__xmlview5--CalendarPageId-title-inner { color: white; position: fixed; left: 190px; top: 10px; width: 120px }
	</html:style>
	<App>
		<pages>
			<Page title="MY CALENDAR" navButtonPress="onNavBack" id="CalendarPageId">
				<content>
					<IconTabBar selectedKey="__filter0" id="__bar0">
						<items>
							<IconTabFilter text="My Meetings" id="__filter0" iconColor="Neutral" icon="sap-icon://accelerated">
								<content>
									<List id="listMeetings" noDataText="No meetings" items="{/meetings}" selectionChange="onMeetingSelected">
										<items>
											<ObjectListItem title="{MeetingSubject}" type="Active" press="onMeetingSelected" number="{Start}" numberUnit="{Date}"
												icon="sap-icon://appointment">
												<attributes>
													<ObjectAttribute text="{MeetingComment}"/>
												</attributes>
											</ObjectListItem>
										</items>
									</List>
								</content>
							</IconTabFilter>
							<IconTabFilter text="Daily" iconColor="Neutral" icon="sap-icon://time-entry-request" id="__filter1">
								<content>
									<DatePicker width="100%" secondaryCalendarType="Gregorian" id="__picker2" value="{path:'/today', type:'sap.ui.model.type.Date', formatOptions: { style: 'short', strictParsing: true}}" valueFormat="MM/DD/YYYY" displayFormat="short" change="onSelectedDateChanged"/>
									<List noDataText="No data" id="_lstDayMeetings" items="{dayMeetings>/}" selectionChange="onMeetingSelected">
										<items>
											<ObjectListItem title="{path: 'dayMeetings>Epoch', formatter: '.formatStart'} {dayMeetings>MeetingSubject}" type="Active" press="onMeetingSelected"/>
										</items>
									</List>
								</content>
							</IconTabFilter>
							<IconTabFilter text="Weekly" iconColor="Neutral" icon="sap-icon://create-entry-time" id="__filter2">
								<content>
									<u:CalendarDateInterval id="calendar" days="7" width="100%" startDateChange="onCalendarSelected" startDate="{weekMeetings>/today}"/>
									<t:Table noDataText="Drop column list items here and columns in the area above" selectionMode="None" id="weeklyTable" class="weeklyTable"
										rows="{weekMeetings>/rows}" columnHeaderVisible="false" cellClick="onMeetingCellSelected">
										<t:columns>
											<t:Column>
												<t:template>
													<Text text="{weekMeetings>0/MeetingSubject}"/>
												</t:template>
											</t:Column>
											<t:Column>
												<t:template>
													<Text text="{weekMeetings>1/MeetingSubject}"/>
												</t:template>
											</t:Column>
											<t:Column>
												<t:template>
													<Text text="{weekMeetings>2/MeetingSubject}"/>
												</t:template>
											</t:Column>
											<t:Column>
												<t:template>
													<Text text="{weekMeetings>3/MeetingSubject}"/>
												</t:template>
											</t:Column>
											<t:Column>
												<t:template>
													<Text text="{weekMeetings>4/MeetingSubject}"/>
												</t:template>
											</t:Column>
											<t:Column>
												<t:template>
													<Text text="{weekMeetings>5/MeetingSubject}"/>
												</t:template>
											</t:Column>
											<t:Column>
												<t:template>
													<Text text="{weekMeetings>6/MeetingSubject}"/>
												</t:template>
											</t:Column>
										</t:columns>
									</t:Table>
								</content>
							</IconTabFilter>
							<IconTabFilter text="Monthly" iconColor="Neutral" icon="sap-icon://calendar" id="__filter3">
								<content>
									<u:Calendar id="calendarMonth" width="100%" select="onMonthCalendarDaySelected" startDateChange="onMonthCalendarChanged"/>
									<List id="listMonthMeetings" noDataText="No meetings" items="{selectedMonthDay>/}" selectionChange="onMeetingSelected">
										<items>
											<ObjectListItem title="{selectedMonthDay>MeetingSubject}" type="Active" press="onMeetingSelected" number="{selectedMonthDay>Start}" numberUnit="{selectedMonthDay>Date}"
												icon="sap-icon://appointment">
												<attributes>
													<ObjectAttribute text="{selectedMonthDay>MeetingComment}"/>
												</attributes>
											</ObjectListItem>
										</items>
									</List>
								</content>
							</IconTabFilter>
							<!-- IconTabFilter text="Yearly" icon="sap-icon://home-share" id="__filter4">
								<content>
									<Image width="300px" height="300px" id="__image0" src="Images/yearCalendar.png"/>
								</content>
							</IconTabFilter -->
						</items>
						<content>
							<StandardListItem counter="0" title="List Item 3" id="__item2_copy2"/>
							<StandardListItem counter="0" title="List Item 3" id="__item2_copy3"/>
						</content>
					</IconTabBar>
				</content>
				<footer>
					<Toolbar>
						<Button text="OK" width="100px" id="__button3" press="onNavBack" icon="sap-icon://accept" tooltip="Calendar View" tap="onNavBack"
							type="Emphasized"/>
						<Button text="Cancel" width="100px" id="__button4" press="onNavBack" icon="sap-icon://decline" tooltip="Calendar View" tap="onNavBack"
							type="Emphasized"/>
					</Toolbar>
				</footer>
			</Page>
		</pages>
	</App>
</mvc:View>