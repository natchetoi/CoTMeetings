<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:sap.ui.layout="sap.ui.layout" controllerName="fusion.controller.FindRoom" id="FindRoomViewId">
	<App>
		<pages>
			<Page title="FIND A ROOM" navButtonPress="onNavBack" navButtonTap="onNavBack" id="FindRoomPageId">
				<content>
					<IconTabBar selectedKey="findFIlter" id="findRoomTabBar">
						<items>
							<IconTabFilter text="Find" id="findFIlter" iconColor="Neutral" icon="sap-icon://work-history">
								<content>
									<Button width="40px" id="expandButton" icon="sap-icon://expand" press="pressExpand" tap="pressExpand" visible="false"/>
									<Label text="Show filter" id="lblShowFilter" visible="false" class="coFilterLabel"/>
									<Button width="40px" id="collapseButton" icon="sap-icon://collapse" press="pressCollapse" tap="pressCollapse"/>
									<Label text="Hide filter" id="lblHideFilter" class="coFilterLabel"/>
									<Panel id="RoomFilterId" class="cotFilterArea">
										<sap.ui.layout:VerticalLayout xmlns:sap.ui.layout="sap.ui.layout" id="__layout0102">
											<sap.ui.layout:HorizontalLayout xmlns:sap.ui.layout="sap.ui.layout" id="__layout0">
												<sap.ui.layout:content>
													<Label text="Distance:" width="110px" id="__label0"/>
													<Text text="1 km" maxLines="0" id="proximityTextId" style="text-align: right"/>
												</sap.ui.layout:content>
											</sap.ui.layout:HorizontalLayout>
											<sap.ui.layout:HorizontalLayout xmlns:sap.ui.layout="sap.ui.layout" id="__layout0222" width="100%">
												<sap.ui.layout:content>
													<Slider id="proximitySliderId" width="200px" change="onProximityChanged" liveChange="changeProximity" max="1000" step="20" value="500" tooltip="Distance from the current location"/>
													<Label text="1000m" width="100%" id="cotRoomDistance" style="text-align: right" textAlign="End"/>
												</sap.ui.layout:content>
											</sap.ui.layout:HorizontalLayout>
											<sap.ui.layout:HorizontalLayout id="__layout0_copy" width="100%">
												<sap.ui.layout:content>
													<Label xmlns="sap.m" text="Capacity:" id="__label000" width="110px"/>
													<Text xmlns:core="sap.ui.core" text="2 pers." maxLines="0" id="capacityTextId" style="text-align: right"/>
												</sap.ui.layout:content>
											</sap.ui.layout:HorizontalLayout>
											<sap.ui.layout:HorizontalLayout xmlns:sap.ui.layout="sap.ui.layout" xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:html="http://www.w3.org/1999/xhtml" id="__layout0111" width="100%">
												<sap.ui.layout:content>
													<Slider id="capacitySliderId" width="200px" change="onCapacityChanged" liveChange="changeCapacity" value="3" max="20" step="1" tooltip="Select number of Attendees"/>
													<Label text="20 pers" width="60px" id="cotRoomCapacity" style="text-align: right" textAlign="Left"/>
												</sap.ui.layout:content>
											</sap.ui.layout:HorizontalLayout>
											<sap.ui.layout:content>
												<sap.ui.layout:VerticalLayout id="__layout1_copy" width="100%">
													<sap.ui.layout:HorizontalLayout>
														<Label text="Conf.Equipment" width="130px" id="__label1"/>
														<CheckBox id="chkConfEquipment" width="20px" select="onConfEquipmentSelected"/>
													</sap.ui.layout:HorizontalLayout>
													<sap.ui.layout:HorizontalLayout>
														<Label text="WiFi" width="130px" id="__label1_copy2"/>
														<CheckBox id="chkBoxWifi" width="20px" select="onWifiSelected"/>
													</sap.ui.layout:HorizontalLayout>
													<sap.ui.layout:HorizontalLayout>
														<Label text="Projector" width="130px" id="__label1_copy4"/>
														<CheckBox id="chkBoxProject" width="20px" select="onProjectorSelected"/>
													</sap.ui.layout:HorizontalLayout>
													<sap.ui.layout:HorizontalLayout>
														<Label text="Computer" width="130px" id="__label1_copy5"/>
														<CheckBox id="chkBoxComputer" width="20px" select="onComputerSelected"/>
													</sap.ui.layout:HorizontalLayout>
												</sap.ui.layout:VerticalLayout>
											</sap.ui.layout:content>
										</sap.ui.layout:VerticalLayout>
									</Panel>
									<List headerText="Found rooms" noDataText="No rooms found" id="listFilteredRooms" items="{rooms>/}" mode="SingleSelectLeft" 
											includeItemInSelection="true" growingScrollToLoad="true" growingThreshold="5" growing="true" selectionChange="onFilteredRoomsSelectionChanged" 
											 itemPress="showRoom" swipe="showRoom">
										<items>
											<ObjectListItem title="{rooms>RoomName}" detailPress="showRoom" press="showRoom">
												<attributes>
													<ObjectAttribute text="Capacity: {rooms>Capacity}"/>
												</attributes>
											</ObjectListItem>
										</items>
									</List>
								</content>
							</IconTabFilter>
							<IconTabFilter text="Location" iconColor="Neutral" icon="sap-icon://map-2" id="locationFilter">
								<content>
									<Carousel activePage="__image0" showBusyIndicator="false" id="__carousel0" pages="rooms&gt;/1/">
										<pages>
											<Panel id="googleMap" headerText="{i18n>panelImageTitle}" visible="true">
												<Image src="http://maps.googleapis.com/maps/api/staticmap?center=Toronto,+Canada,&amp;zoom=13&amp;scale=false&amp;size=600x300&amp;maptype=roadmap&amp;key=AIzaSyCqifMn0_bk8Vp_QXyfRSiS7GJcvhRwdm4&amp;format=png&amp;visual_refresh=true&amp;markers=size:mid%7Ccolor:0xff0000%7Clabel:1%7C,55+John+Toronto+ON+Canada55" height="300px"/>
											</Panel>
											<Image width="100%" height="100%" id="__image1" src="Images/MH15.png"/>
											<Panel id="ESRIMap" headerText="{i18n>panelImageTitle}" visible="true">
											   <html:iframe src="Images/ESRI1.png" width="100%" height="300px"></html:iframe>
											<!-- html:iframe src="http://map.toronto.ca/maps/map.jsp?app=TorontoMaps_v2" width="100%" height="300px"></html:iframe -->
											<!-- sap.ui.vbm:GeoMap xmlns:sap.ui.vbm="sap.ui.vbm" id="__map0" initialPosition="43.6460466;-79.3909029;2"/ -->
											</Panel>
										</pages>
									</Carousel>
								</content>
							</IconTabFilter>
							<IconTabFilter text="Favorites" iconColor="Neutral" icon="sap-icon://favorite-list" id="favoritesFilter">
								<content>
									<List noDataText="Favorites" id="_listFavorites" mode="SingleSelectLeft" includeItemInSelection="true" selectionChange="onFavoritesSelectionChanged">
										<items>
											<StandardListItem type="Active" counter="0" title="Simcoe" description="14 seats, Projector, conference calls" icon="sap-icon://projector" id="__item0"/>
											<StandardListItem xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns:html="http://www.w3.org/1999/xhtml" type="Active" counter="0" title="Adelaide" description="5 seats, Big screen TV, Conference calls" icon="sap-icon://microphone" id="__item1_copy2"/>
											<StandardListItem xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns:html="http://www.w3.org/1999/xhtml" counter="0" title="Jarvis" description="4 seats, Computer, TV" icon="sap-icon://laptop" id="__item1_copy" type="Active"/></items>
									</List>
								</content>
							</IconTabFilter>
						</items>
						<content>
							<Label xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:html="http://www.w3.org/1999/xhtml" text="Equipment" width="100%" id="__label1_copy"/>
						</content>
					</IconTabBar>
				</content>
				<footer>
					<Toolbar>
						<Button text="OK" width="100px" id="__button3" press="bookRoom" icon="sap-icon://accept" tooltip="Calendar View" tap="bookRoom" type="Emphasized"/>
						<Button text="Cancel" width="100px" id="__button4" press="onNavBack" icon="sap-icon://decline" tooltip="Calendar View" tap="onNavBack" type="Emphasized"/>
						<Button text="Details" width="100px" id="__button5" press="showRoom" icon="sap-icon://map-3" tooltip="Room details"  type="Emphasized"/>
					</Toolbar>
				</footer>
			</Page>
		</pages>
	</App>
</mvc:View>