<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:u="sap.ui.unified" xmlns:t="sap.ui.table" controllerName="fusion.controller.Calendar">
	<html:style>
		#__xmlview5--CalendarPageId-title-inner { color: white; position: fixed; left: 190px; top: 10px; width: 120px }
	</html:style>
	<App>
		<pages>
			<Page title="MY CALENDAR" navButtonPress="onNavBack" id="CalendarPageId">
				<content>
					<IconTabBar selectedKey="__filter0" id="__bar0">
						<items>
							<IconTabFilter text="My Meetings" id="__filter0" iconColor="Neutral" icon="sap-icon://accelerated">
								<content>
									<List id="listMeetings" noDataText="No meetings" items="{/meetings}" selectionChange="onMeetingSelected">
										<items>
											<ObjectListItem title="{MeetingSubject}" type="Active" press="onMeetingSelected" number="{Start}" numberUnit="{Date}" icon="sap-icon://appointment">
												<attributes>
													<ObjectAttribute text="{MeetingComment}"/>
												</attributes>
											</ObjectListItem>
										</items>
									</List>
								</content>
							</IconTabFilter>
							<IconTabFilter text="Daily" iconColor="Neutral" icon="sap-icon://time-entry-request" id="__filter1">
								<content>
									<DatePicker width="100%" secondaryCalendarType="Gregorian" id="__picker2" value="{/today}" change="onSelectedDateChanged"/>
									<List noDataText="No data" id="_lstDayMeetings" items="{dayMeetings>/}" selectionChange="onMeetingSelected">
										<items>
											<ObjectListItem title="{dayMeetings>Start} {dayMeetings&gt;MeetingSubject}" type="Active" press="onMeetingSelected"/>
										</items>
									</List>
								</content>
							</IconTabFilter>
							<IconTabFilter text="Weekly" iconColor="Neutral" icon="sap-icon://create-entry-time" id="__filter2">
								<content>
									<u:CalendarDateInterval id="calendar" days="7" width="100%" startDateChange="onCalendarSelected" startDate="{weekMeetings>/today}"/>
									<t:Table noDataText="Drop column list items here and columns in the area above" selectionMode="None" id="weeklyTable" class="weeklyTable" rows="{weekMeetings>/rows}" columnHeaderVisible="false" cellClick="onMeetingCellSelected">
										<t:columns>
											<t:Column>
												<t:template>
													<Text text="{weekMeetings>0/MeetingSubject}"/>
												</t:template>
											</t:Column>
											<t:Column>
												<t:template>
													<Text text="{weekMeetings>1/MeetingSubject}"/>
												</t:template>
											</t:Column>
											<t:Column>
												<t:template>
													<Text text="{weekMeetings>2/MeetingSubject}"/>
												</t:template>
											</t:Column>
											<t:Column>
												<t:template>
													<Text text="{weekMeetings>3/MeetingSubject}"/>
												</t:template>
											</t:Column>
											<t:Column>
												<t:template>
													<Text text="{weekMeetings>4/MeetingSubject}"/>
												</t:template>
											</t:Column>
											<t:Column>
												<t:template>
													<Text text="{weekMeetings>5/MeetingSubject}"/>
												</t:template>
											</t:Column>
											<t:Column>
												<t:template>
													<Text text="{weekMeetings>6/MeetingSubject}"/>
												</t:template>
											</t:Column>
										</t:columns>
									</t:Table>
								</content>
							</IconTabFilter>
							<IconTabFilter text="Monthly" iconColor="Neutral" icon="sap-icon://calendar" id="__filter3">
								<content>
									<HBox width="100%" id="__hbox0">
									    <items>
									        <Label text="October" width="100%" id="__label0"/>
									        <PagingButton count="5" id="__button2"/>
									    </items>
									</HBox>
									<Table noDataText="Drop column list items here and columns in the area above" id="__table2">
