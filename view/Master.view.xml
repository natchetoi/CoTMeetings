<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns:html="http://www.w3.org/1999/xhtml" xmlns="sap.m" displayBlock="true" controllerName="fusion.controller.Master">
	<Page id="page" title="MY MEETINGS" class="coTMyMeetings">
		<!-- subHeader>
			<Bar id="searchBar">
				<contentMiddle>
					<SearchField id="searchField" showRefreshButton="{device>/isNoTouch}" placeholder="{i18n>masterSearchPlaceholder}" search="onSearch"
						tooltip="{i18n>masterSearchTooltip}" width="100%"></SearchField>
				</contentMiddle>
			</Bar>
		</subHeader -->
		<content>
			<IconTabBar>
				<items>
					<IconTabFilter text="List" icon="sap-icon://list" iconColor="Neutral">
						<content>
							<List id="listMeetings" noDataText="No meetings" items="{meetings>/}" selectionChange="onMeetingSelected">
								<items>
									<ObjectListItem title="{meetings>MeetingSubject}" type="Active" press="onMeetingSelected" number="{meetings>Start}" numberUnit="{meetings>Date}" icon="sap-icon://appointment">
										<attributes>
											<ObjectAttribute text="{meetings>MeetingComment}"/>
										</attributes>
									</ObjectListItem>
								</items>
							</List>
						</content>
					</IconTabFilter>
				</items>
			</IconTabBar>
		</content>
		<footer>
			<Toolbar>
				<Button text="Calendar" width="110px" id="__button3" press="calendar" icon="sap-icon://calendar" tooltip="My Calendar View" css="background-color:#498bca" type="Emphasized"/>
				<Button text="New" width="100px" id="newButtonId" press="addMeeting" icon="sap-icon://add-contact" type="Emphasized"/>
			</Toolbar>
		</footer>
	</Page>
</mvc:View>