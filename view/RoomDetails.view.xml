<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:html="http://www.w3.org/1999/xhtml" controllerName="fusion.controller.RoomDetails" id="RoomDetailsViewId">
	<App>
		<pages>
			<Page title="ROOM" backgroundDesign="Transparent" id="RoomDetailsPageId">
				<content>
				    <Panel id="__panel1">
				    </Panel>
				    <IconTabBar xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:html="http://www.w3.org/1999/xhtml" selectedKey="__xmlview0--__filter6" id="__bar0">
				        <items>
				            <IconTabFilter text="Details" icon="sap-icon://task" id="__filter4">
				                <content>
				                    <Panel xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns:html="http://www.w3.org/1999/xhtml" xmlns="sap.m" id="__panel0">
				                        <content>
				                            <VBox width="100%" direction="Column" id="__vbox0">
				                                <HBox>
				                                    <Text text="{room>/RoomName} at {room>/Building} {room>/Floor}" maxLines="0" id="__text0_copy"/>
				                                    <items/>
				                                    </HBox>
				                                <Text text="Capacity: {room>/Capacity}" maxLines="0" id="__text011"/>
				                                <HBox>
				                                    <Label text="Projector" width="150px" id="__label1" visible="{room>Projector}"/>
				                                    <Label text="Big Screen TV" id="__label2" visible="{room>/TV}"/>
				                                    </HBox>
				                                <HBox>
				                                    <Label text="Computer" width="150px" id="__label3" visible="{Computer}"/>
				                                    <Label text="Conference Equipment" id="__label4" visible="{Conference}"/>
				                                    </HBox>
				                                <HBox>
				                                    <Label text="WiFi" width="150px" id="__label5" visible="{WiFi}"/>
				                                    <Label text="WhiteBoard" width="150px" id="__label6" visible="{WhiteBoard}"/>
				                                    </HBox>
				                                </VBox>
				                            
				                        </content>
				                        
				                    </Panel>
				                </content>
				            </IconTabFilter>
				            <IconTabFilter text="Photo" icon="sap-icon://meeting-room" id="__filter6">
				                <content>
				                    <Carousel xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns:html="http://www.w3.org/1999/xhtml" xmlns="sap.m" activePage="__image0" showBusyIndicator="false" id="__carousel0" pages="rooms&gt;/1/">
				                        <pages>
				                            <Image width="100%" height="60%" id="__image1" src="{room>Image}" alt="{room>RoomName}"/>
				                        </pages>
				                    </Carousel>
				                </content>
				            </IconTabFilter>
				            <IconTabFilter text="Floor plan" icon="sap-icon://map-3" id="__filter12">
				            	<content>
				                    <Carousel xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns:html="http://www.w3.org/1999/xhtml" xmlns="sap.m" activePage="__image0" showBusyIndicator="false" id="__carousel1">
				                        <pages>
											<Panel id="plan3dId" headerText="{i18n>panelImageTitle}" visible="true">
												<html:iframe src="{Path3D}.html" width="100%" height="100%"></html:iframe>
											</Panel>
											<Image width="100%" height="100%" id="floorPlanId" src="Images/MH15.png"/>
				                        </pages>
				                    </Carousel>
				            	</content>
				            </IconTabFilter>
				            <IconTabFilter text="Map" icon="sap-icon://map-2" id="__filter11">
				            	<content>
											<Panel id="googleMap" headerText="{i18n>panelImageTitle}" visible="true">
												<Image src="http://maps.googleapis.com/maps/api/staticmap?center=Toronto,+Canada,&amp;zoom=13&amp;scale=false&amp;size=600x300&amp;maptype=roadmap&amp;key=AIzaSyCqifMn0_bk8Vp_QXyfRSiS7GJcvhRwdm4&amp;format=png&amp;visual_refresh=true&amp;markers=size:mid%7Ccolor:0xff0000%7Clabel:1%7C,55+John+Toronto+ON+Canada55" height="300px"/>
											</Panel>
											<Panel id="ESRIMap" headerText="{i18n>panelImageTitle}" visible="true">
											   <html:iframe src="Images/ESRI1.png" width="100%" height="300px"></html:iframe>
											<!-- html:iframe src="http://map.toronto.ca/maps/map.jsp?app=TorontoMaps_v2" width="100%" height="300px"></html:iframe -->
											</Panel>
				            	</content>
				            </IconTabFilter>
				            	
				            <IconTabFilter text="Schedule" icon="sap-icon://date-time" id="__filter10">
				                <content>
				                    <List   xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns:html="http://www.w3.org/1999/xhtml" 
				                                xmlns="sap.m" noDataText="No data" id="__list1">
				                        <items>
				                            <StandardListItem counter="0" title="List Item 1" id="__item3"/>
				                            <StandardListItem counter="0" title="List Item 2" id="__item4"/>
				                            <StandardListItem counter="0" title="List Item 3" id="__item5"/>
				                        </items>
				                        
				                    </List>
				                </content>
				            </IconTabFilter>
				            </items>
				        </IconTabBar>
				</content>
		<footer>
			<Toolbar>
						<Button text="Book" width="100px" id="__button3" press="bookRoom" icon="sap-icon://accept" tooltip="Book a room" tap="bookRoom" type="Emphasized"/>
						<Button text="Cancel" width="100px" id="__button4" press="onNavBack" icon="sap-icon://decline" tooltip="Cancel" tap="onNavBack" type="Emphasized"/>
						<Button text="3D" width="100px" id="__button5" press="nav3DFloorPlan" icon="sap-icon://map-3" tooltip="3D Floor PLan" type="Emphasized"/>
			</Toolbar>
		</footer>				
			</Page>
		</pages>
	</App>
</mvc:View>