<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:f="sap.ui.layout.form" controllerName="fusion.controller.Detail" id="DetailViewId">
	<Page navButtonPress="onNavBack" title="{i18n>detailTitle}" id="DetailPageId">
		<content>
			<ObjectHeader title="{/MeetingSubject}" number="{/Start}" numberUnit="{/End}">
				<statuses>
					<ObjectStatus text="{/Date}" icon="sap-icon://date-time"/>
				</statuses>
			</ObjectHeader>
			<IconTabBar id="idIconTabBar">
				<items>
					<IconTabFilter text="Event Details" iconColor="Neutral" icon="sap-icon://hint" key="tabDetails">
						<VBox class="sapUiSmallMargin">
							<f:SimpleForm id="SimpleFormDisplay354" maxContainerCols="2" editable="false" labelSpanL="3" labelSpanM="3" emptySpanL="4" emptySpanM="4"
								columnsL="1" columnsM="1">
								<f:content>
									<Label text="Meeting comment" design="Bold"/>
									<Text text="{/MeetingComment}"/>
									<Label text="Organizer" design="Bold"/>
									<Text text="{/Organizer}"/>
									<Label text="Room" design="Bold"/>
									<Text text="{/Location}"/>
								</f:content>
							</f:SimpleForm>
						</VBox>
					</IconTabFilter>
					<IconTabFilter text="Attendees" count="{= ${/Attendees}.length}" icon="sap-icon://person-placeholder" iconColor="Neutral" id="__filter11">
						<content>
							<List items="{/Attendees}">
								<items>
									<StandardListItem title="{name}" icon="sap-icon://person-placeholder"/>
								</items>
							</List>
						</content>
					</IconTabFilter>
					<IconTabFilter text="Room details" icon="sap-icon://meeting-room" iconColor="Neutral" id="__filter2">
						<content>
							<Carousel activePage="addressImage" showBusyIndicator="false" id="carouselRoomDetails">
								<pages>
									<Image width="100%" height="100%" id="imgRoom" src="{/Image}"/>
									<Image width="100%" height="100%" id="imgRoomPath" src="{/Path2Room}"/>
								</pages>
							</Carousel>
						</content>
					</IconTabFilter>
				</items>
			</IconTabBar>
		</content>
		<footer>
			<Toolbar>
				<content>
					<Button text="OK" width="100px" id="okButtonId" press="onNavBack" type="Emphasized"/>
				</content>
			</Toolbar>
		</footer>
	</Page>
</mvc:View>