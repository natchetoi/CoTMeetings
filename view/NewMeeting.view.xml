				<content>
					<IconTabBar selectedKey="__filter0" id="__bar0">
						<items>
							<IconTabFilter text="Details" id="__filter0" iconColor="Neutral" icon="sap-icon://idea-wall">
								<content>
									<VBox class="sapUiSmallMargin">
										<f:SimpleForm id="SimpleFormDisplay354" maxContainerCols="2" editable="true" labelSpanL="3" labelSpanM="3" emptySpanL="4" emptySpanM="4" columnsL="1" columnsM="1" layout="ResponsiveGridLayout">
											<f:content>
												<Label text="Subject" design="Bold"/>
												<Input id="inputSubject" value="{/MeetingSubject}"/>
												<l:HorizontalLayout>
												  <Label text="Location   :" design="Bold"/>
												  <Text id="txtSelectedRoom" text=".   {/RoomName}    .">
													<layoutData>
														<l:GridData span="L3 M4 S4" />
													</layoutData>
												  </Text>
												  <Button text=""  id="__button1" icon="sap-icon://search" press="findRoom" class="coTFindRoomButton"  />
												</l:HorizontalLayout>
												<Label text="Description" design="Bold"/>
												<TextArea id="inputDescription" value="{/MeetingComment}"/>
												<Label text="Conference Call #" id="__label1" design="Bold"/>
												<Input id="inputCallNumber" value="{/CallNumber}"/>
											</f:content>
										</f:SimpleForm>
									</VBox>
								</content>
							</IconTabFilter>
							<IconTabFilter text="Attendees" iconColor="Neutral" icon="sap-icon://person-placeholder" id="__filter2">
								<content>
									<List noDataText="No data" id="attListId" items="{/Attendees}">
										<items>
											<StandardListItem title="{name}"/>
										</items>
									</List>
									<Button id="__button22" press="addPerson" icon="sap-icon://add" tooltip="Add Attendees" tap="addPerson" text="Add"/>
								</content>
							</IconTabFilter>
							<IconTabFilter text="Time" iconColor="Neutral" icon="sap-icon://time-entry-request" id="__filter1">
								<content>
									<VBox class="sapUiSmallMargin">
										<f:SimpleForm id="SimpleFormDisplay355" maxContainerCols="2" editable="true" labelSpanL="3" labelSpanM="3" emptySpanL="4" emptySpanM="4" columnsL="1" columnsM="1" layout="ResponsiveGridLayout">
											<f:content>
												<Label text="Date" design="Bold"/>
												<DatePicker width="100%" secondaryCalendarType="Gregorian" id="__picker2" value="{/Date}"/>
												<Label text="From" design="Bold"/>
												<TimePicker placeholder="hh:mm am/pm" placeholderSymbol="-" mask="h9:59:59 AB" displayFormat="h:mm a" localeId="en-US" id="__picker0" valueFormat="h:mm a" value="{/Start}"/>
												<Label text="To" design="Bold"/>
												<TimePicker placeholder="hh:mm am/pm" placeholderSymbol="-" mask="h9:59:59 AB" displayFormat="h:mm a" localeId="en-US" id="__picker1" valueFormat="h:mm a" value="{/End}"/>
											</f:content>
										</f:SimpleForm>
									</VBox>
								</content>
							</IconTabFilter>
						</items>
					</IconTabBar>
				</content>
				<footer>
					<Toolbar>
						<Button text="" width="50px" id="__button31" press="saveMeeting" icon="sap-icon://accept" tooltip="Save and return" type="Emphasized"/>
						<Button text="" width="50px" id="__button41" press="onNavBack" icon="sap-icon://decline" tooltip="Cancel and return" type="Emphasized"/>
						<!--<Button width="50px" id="__button3" press="calendar" icon="sap-icon://calendar" tooltip="Calendar" type="Emphasized"/>-->
						<Button width="50px" id="__button0" press="pickTime" icon="sap-icon://create-entry-time" tooltip="Pick Event Time" type="Emphasized"/>
					</Toolbar>
				</footer>
			</Page>
		</pages>
	</App>
</mvc:View>