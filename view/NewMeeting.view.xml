<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:html="http://www.w3.org/1999/xhtml" controllerName="fusion.controller.NewMeeting" id="NewMeetingViewId">	

	<App>
		<pages>
			<Page title="NEW MEETING" icon="sap-icon://company-view" navButtonPress="onNavBack" showSubHeader="false" id="newMeetingPageId">
		<!--customHeader  class="coTnewMeeting" id="newMeetingHeader" >
